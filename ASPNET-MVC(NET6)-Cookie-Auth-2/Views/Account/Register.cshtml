@model RegisterViewModel
@{
    ViewData["Title"] = "Register";

}
<div class="row">

    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>

</div>

<div class="row">

    <div class="col-4 offset-4">
        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-control" placeholder="username" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RePassword" class="form-label">re-password</label>
                <input asp-for="RePassword" type="password" class="form-control" placeholder="re-password" />
                <span asp-validation-for="RePassword" class="text-danger small"></span>
            </div>

            <div class="form-group d-grid mb-3">
                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-user-plus me-2"></i>Register</button>
            </div>
        </form>
    </div>

</div>