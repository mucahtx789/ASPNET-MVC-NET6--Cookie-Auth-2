@{
    ViewData["Title"] = "Profile";

}
<div class="row">

    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>

</div>

<div class="row mt-4">
   <div class="col-6 offset-6 my-3">
        <div class="mb-4">
            <div asp-validation-summary="All" class="text-danger small"></div>
        </div>
   </div>
        <div class="col-6">
        <form method="post" asp-action="ProfileChangeImage" enctype="multipart/form-data">
            <div class="offset-3 mb-3">
                <img src="~/uploads/@ViewData["ProfileImage"]" width="150" class="img-thumbnail rounded-circle" />
            </div>
           <div class="form-group mb-3">
               <label class="form-label small">Profile Image</label>
              <input type="file" name="file" class="form-control" accept=".jpg" />
              <span class="small"> <i class="fa fa-info-circle me-1"></i> Only jpg</span>
              <div class="text-center mt-3">
                 <button class="btn btn-secondary" type="submit"><i class="fa-solid fa-floppy-disk me-2"></i>Save</button>
              </div>
           </div>
            </form>
        </div>

    <div class="col-6">
        
        <div>
            <h2>Profil Settings</h2>
        </div>

        <form method="post" asp-action="ProfileChangeFullName">
            <div class="form-group">
            
                <label class="form-label small">Name Surname</label>
                <div class="input-group mb-3">
                    <input name="fullname" type="text" class="form-control" placeholder="Tam ad" value="@ViewData["Fullname"]"/>
                    <button class="btn btn-secondary" type="submit"><i class="fa-solid fa-floppy-disk me-2"></i>Save</button>
                </div>
            </div>
        </form>
         <form method="post" asp-action="ProfileChangePassword">
            <div class="form-group">
            
                <label class="form-label small">New Password</label>
                <div class="input-group">
                    <input name="password" type="password" class="form-control" placeholder="password"/>
                    <button class="btn btn-secondary" type="submit"><i class="fa-solid fa-floppy-disk me-2"></i>Save</button>
                </div>
                @if (ViewData["Result"] != null && ViewData["Result"] == "Password changed")
                {
                    <span class="text-succes small">password updated</span>
                }
            </div>
        </form>
    </div>

</div>
@section Scripts{
    @if (ViewData["Result"] != null && ViewData["Result"] == "Password changed"){
       <script>
            toastr["success"]("Password changed", "Profile")
       </script>
    }
}